<div class="filter-section">
  <div class="topics">
    <div class="lists">
      <h4>Languages</h4>
      <ul>
        <% Object.keys(languages).forEach(function(item) { %>
        <li><a href="/topics/<%= item %>"
            class="link show-loader <%- (topic == item) ? 'active': '' %>"><%= languages[item] %></a></li>
        <% }); %>
      </ul>
    </div>
    <div class="lists">
      <h4>Topics</h4>
      <ul>
        <% Object.keys(tags).forEach(function(item) { %>
        <li><a href="/topics/<%= item %>"
            class="link show-loader <%- (topic == item) ? 'active': '' %>"><%= tags[item] %></a>
        </li>
        <% }); %>
      </ul>
    </div>
  </div>
  <div class="filter-container">
    <div class="total-result">
      <p><%= topic %> <span>(found <%- numberWithCommas(totalCount) %> repositories)<span></p>
    </div>
    <div class="filter-wrapper">
      <span>Sort by</span>
      <div class="option-wrapper" id="option-wrapper">
        <div class="selected"><%= options[sort] %></div>
        <div class="icon">
          <embed type="image/svg+xml" src="/svg/arrow.svg" />
        </div>
      </div>
      <div class="options">
        <ul id="option-list">
          <% Object.keys(options).forEach(function(item) { %>
          <li>
            <a href="/topics/<%= topic %>?s=<%= item %>" class="link show-loader <%= (sort === item) ? 'active': '' %>">
              <%= options[item] %>
            </a>
          </li>
          <% }); %>
        </ul>
      </div>
    </div>
  </div>
</div>